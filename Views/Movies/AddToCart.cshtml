@model _31181020918_LeGiaPhuc.Models.HoaDon
@{
    ViewBag.Title = "Giỏ hàng";
}
<h2>Giỏ hàng của bạn</h2>
<table id="cartTable" class="table">
    <thead>
        <tr>
            <th>Số lượng</th>
            <th>Sản phẩm</th>
            <th class="text-right">Giá</th>
            <th class="text-right">Thành Tiền</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hoaDonChiTiet in Model.ChiTietHoaDons)
        {
            <tr>
                <td class="text-center">@hoaDonChiTiet.SoLuong</td>
                <td class="text-left">@hoaDonChiTiet.MovieObj.Title</td>
                <td class="text-right">@hoaDonChiTiet.MovieObj.Price.ToString("c")</td>
                <td class="text-right">
                    @((hoaDonChiTiet.SoLuong * hoaDonChiTiet.MovieObj.Price).ToString("c"))
                </td>
                <td>
                    @Html.ActionLink("Xóa", "RemoveFromCart",
                    new { maMovies = hoaDonChiTiet.MaMovie }, new
                     {
                         @class = "btn btn-sm  btn-warning" })
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3" class="text-right">Total:</td>
            <td class="text-right">
                @Model.TongTien.ToString("c")
            </td>
        </tr>
    </tfoot>
</table>
<div class="text-center">
    @Html.ActionLink("Quay lại mua hàng", "Index", null, new
    {
        @class = "btn btn-primary"
   })
    @Html.ActionLink("Thanh toán ngay", "Checkout", null, new
    {
        @class = "btn btn-primary"
   })
</div>